@model ATable.Models.Utilisateur

@{
    ViewBag.Title = "Login";
}
<div class="container body-content">
    <div class="row valign-wrapper center-align">
        <div class="col s12 m6 offset-m3 valign">

            <h2>Connexion</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(model => model.Matricule, new { htmlAttributes = new { @class = "validate" } })
                        @Html.ValidationMessageFor(model => model.Matricule, "", new { @class = "text-danger" })
                        <label for="Matricule">N° de Matricule</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">
                            lock_outline
                        </i>
                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "validate" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        <label for="password">Mot de Passe</label>
                    </div>
                </div>
                <div class="row">
                    <a href="#">Mot de passe oublié ?</a>
                </div>

                <div class="row">
                    <input type="submit" value="Se connecter" class="btn btn-default" />
                </div>

                <div class="row center-align">
                    Vous n'avez pas de compte ?<a href="@Url.Action("Create", "Utilisateurs")">&nbsp;Inscription</a>
                </div>
            }
        </div>
    </div>
</div>
