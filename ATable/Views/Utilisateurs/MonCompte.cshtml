@model ATable.Models.Utilisateur

@{
    ViewBag.Title = "MonCompte";
}


<div class="container body-content">
    <div class="row valign-wrapper center-align">
        <div class="col s12 m6 offset-m3 valign">
            <h2>Mon Compte</h2>
            <hr />


            <div class="row">
                <div class="col s12">
                    <ul class="tabs">
                        <li class="tab col s3"><a class="active" href="#histo">Historique et solde</a></li>
                        <li class="tab col s3"><a href="#motdepasse">Mot de Passe</a></li>
                    </ul>
                </div>
                <div id="histo" class="col s12">

                </div>
                <div id="motdepasse" class="col s12">
                    @using (Html.BeginForm("Edit", "Utilisateurs", null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Modifiez votre mot de passe</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdUtilisateur)

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">
                                    lock_outline
                                </i>
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "validate" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                <label for="password">Mot de Passe</label>
                            </div>
                        </div>


                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">
                                    lock_outline
                                </i>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                <label for="password">Nouveau Mot de Passe</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">
                                    lock_outline
                                </i>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                <label for="password">Confirmez votre nouveau Mot de Passe</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Modifier" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>




        </div>
    </div>
</div>