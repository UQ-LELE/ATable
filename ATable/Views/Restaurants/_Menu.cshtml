@model IEnumerable<ATable.Models.Produit>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/materialize")

@{ 
    ATable.Models.Menu menu = ViewBag.Menu;
}

<div class='row mb-0'>
    <div class='col m4 hide-on-small-and-down center-align'>
        <h4 class='pt-1'>@menu.Nom</h4>
        <div class='flow-text'>
            <img class='responsive-img' src='~/Images/plats/plateausignature.jpg' />
            <p>Nondum nihil ne in fame scaphas tum luna tum plerumque petivere splendore degressi omnibus viles.</p>
            <div class='col s12 price-modal z-depth-1'>
                <h5>16,90 €</h5>
            </div>
        </div>
    </div>
    <div class='col m8'>
        <h4 class='courgette pt-1 center-align'>Composez votre menu !</h4>

        <ul id='tabs-menu' class='tabs'>
            <li class='tab col s3'><a class='active' href='#tabentree'>1. Entrée</a></li>
            <li class='tab col s3'><a href='#tabplat'>2. Plat</a></li>
            <li class='tab col s3'><a href='#tabdessert'>3. Dessert</a></li>
        </ul>
        <div class='row'>
            <div id='tabentree' class='col s12'>
                <div class='row'>
                    @foreach (var produit in Model.Where(m => m.IdCategorie == 1))
                    {
                        <div class='col s12 m4 l3'>
                            <div class='card-panel hoverable p-1 center-align' style="height: 235px;">
                                <img src='~/Images/plats/@produit.Photos.FirstOrDefault().Nom' class='responsive-img' style="height: 125px;" />
                                <div class='row mb-0'>
                                    <button class='btn-floating waves-effect waves-light red' onclick='removeProduit(@produit.IdProduit)'><i class='material-icons'>remove</i></button>
                                    <span id="@produit.IdProduit" class='mx-1'>0</span>
                                    <button class='btn-floating waves-effect waves-light red' onclick='addProduit(@produit.IdProduit)'><i class='material-icons'>add</i></button>
                                </div>
                                <p>@produit.Nom</p>
                            </div>
                        </div>
                    }
                </div>
                <div class='row'>
                    <div class="col s12">
                        <div class='col m3 offset-m9'>
                            <button class='btn waves-teal right' onclick='next(1)'>Suivant</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id='tabplat' class='col s12'>
            <div class='row'>
                @foreach (var produit in Model.Where(m => m.IdCategorie == 2))
                {
                    <div class='col s12 m4 l3'>
                        <div class='card-panel hoverable p-1 center-align' style="height: 235px;">
                            <img src='~/Images/plats/@produit.Photos.FirstOrDefault().Nom' class='responsive-img' style="height: 125px;" />
                            <div class='row mb-0'>
                                <button class='btn-floating waves-effect waves-light red' onclick='removeProduit(@produit.IdProduit)'><i class='material-icons'>remove</i></button>
                                <span id="@produit.IdProduit" class='mx-1'>0</span>
                                <button class='btn-floating waves-effect waves-light red' onclick='addProduit(@produit.IdProduit)'><i class='material-icons'>add</i></button>
                            </div>
                            <p>@produit.Nom</p>
                        </div>
                    </div>
                }
                <div class='row'>
                    <div class="col s12">
                        <div class='col m3'>
                            <button class='btn waves-teal' onclick='previous(2)'>Précédent</button>
                        </div>
                        <div class='col m3 offset-m6'>
                            <button class='btn waves-teal right' onclick='next(2)'>Suivant</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id='tabdessert' class='col s12'>
            <div class='row'>
                @foreach (var produit in Model.Where(m => m.IdCategorie == 3))
                {
                    <div class='col s12 m4 l3'>
                        <div class='card-panel hoverable p-1 center-align' style="height: 235px;">
                            <img src='~/Images/plats/@produit.Photos.FirstOrDefault().Nom' class='responsive-img' style="height: 125px;" />
                            <div class='row mb-0'>
                                <button class='btn-floating waves-effect waves-light red' onclick='removeProduit(@produit.IdProduit)'><i class='material-icons'>remove</i></button>
                                <span id="@produit.IdProduit" class='mx-1'>0</span>
                                <button class='btn-floating waves-effect waves-light red' onclick='addProduit(@produit.IdProduit)'><i class='material-icons'>add</i></button>
                            </div>
                            <p>@produit.Nom</p>
                        </div>
                    </div>
                }
                <div class='row'>
                    <div class="col s12">
                        <div class='col m3'>
                            <button class='btn waves-teal' onclick='previous(3)'>Précédent</button>
                        </div>
                        <div class='col m3 offset-m6'>
                            <button class='btn waves-teal right' onclick='addMenu(idMenu)'>Valider</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



