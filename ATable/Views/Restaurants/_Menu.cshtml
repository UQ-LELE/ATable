@model IEnumerable<ATable.Models.Produit>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/materialize")

@{
    ATable.Models.Menu menu = ViewBag.Menu;
}

<div class='row mb-0'>
    <div class='col m4 hide-on-small-and-down center-align'>
        <h4 class='pt-1'>@menu.Nom</h4>
        <div class='flow-text'>
            <img class='responsive-img' src='~/Images/plats/plateausignature.jpg' />
            <p>Nondum nihil ne in fame scaphas tum luna tum plerumque petivere splendore degressi omnibus viles.</p>
            <div class='col s12 price-modal z-depth-1'>
                <h5>@menu.Prix €</h5>
            </div>
        </div>
    </div>
    <div class='col m8'>
        <h4 class='courgette pt-1 center-align'>Composez votre menu !</h4>

        <ul id='tabs-menu' class='tabs'>
            <li id="liEntree" class='tab col s3'><a class='active' href='#tabentree'>1. Entrée</a></li>
            <li id="liPlat" class='tab col s3 disabled'><a href='#tabplat'>2. Plat</a></li>
            <li id="liDessert" class='tab col s3 disabled'><a href='#tabdessert'>3. Dessert</a></li>
        </ul>

        <div class='row'>
            <div id='tabentree' class='col s12'>
                <div class='row'>
                    @foreach (var produit in Model.Where(m => m.IdCategorie == 1))
                    {
                        <div class='col s12 m4 l3'>
                            <a onclick="selectProduct(@produit.IdProduit, @produit.IdCategorie)" style="color:rgba(0, 0, 0, 0.87)">
                                <div id="@produit.IdProduit" class='card-panel hoverable p-1 center-align @produit.IdCategorie' style="height: 235px;">
                                    <img src='~/Images/plats/@produit.Photos.FirstOrDefault().Nom' class='responsive-img' style="height: 125px;" />
                                    <p><strong>@produit.Nom</strong></p>
                                </div>
                            </a>
                        </div>
                    }
                </div>
                <div class='row'>
                    <div class="col s12">
                        <div class='col m3 offset-m9'>
                            <button id="btnNextOne" class='btn waves-teal right disabled' onclick='next(1)'>Suivant</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id='tabplat' class='col s12'>
            <div class='row'>
                @foreach (var produit in Model.Where(m => m.IdCategorie == 2))
                {
                <div class='col s12 m4 l3'>
                    <a onclick="selectProduct(@produit.IdProduit, @produit.IdCategorie)" style="color:rgba(0, 0, 0, 0.87)">
                        <div id="@produit.IdProduit" class='card-panel hoverable p-1 center-align @produit.IdCategorie' style="height: 235px;">
                            <img src='~/Images/plats/@produit.Photos.FirstOrDefault().Nom' class='responsive-img' style="height: 125px;" />
                            <p><strong>@produit.Nom</strong></p>
                        </div>
                    </a>
                </div>
                }
                <div class='row'>
                    <div class="col s12">
                        <div class='col m3'>
                            <button id="btnPrevTwo" class='btn waves-teal' onclick='previous(2)'>Précédent</button>
                        </div>
                        <div class='col m3 offset-m6'>
                            <button id="btnNextTwo" class='btn waves-teal right disabled' onclick='next(2)'>Suivant</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id='tabdessert' class='col s12'>
            <div class='row'>
                @foreach (var produit in Model.Where(m => m.IdCategorie == 3))
                {
                <div class='col s12 m4 l3'>
                    <a onclick="selectProduct(@produit.IdProduit, @produit.IdCategorie)" style="color:rgba(0, 0, 0, 0.87)">
                        <div id="@produit.IdProduit" class='card-panel hoverable p-1 center-align @produit.IdCategorie' style="height: 235px;">
                            <img src='~/Images/plats/@produit.Photos.FirstOrDefault().Nom' class='responsive-img' style="height: 125px;" />
                            <p><strong>@produit.Nom</strong></p>
                        </div>
                    </a>
                </div>
                }
                <div class='row'>
                    <div class="col s12">
                        <div class='col m3'>
                            <button id="btnPrevThree" class='btn waves-teal' onclick='previous(3)'>Précédent</button>
                        </div>
                        <div class='col m3 offset-m6'>
                            <button id="btnValidationMenu" class='btn waves-teal right disabled' onclick='addMenu(@menu.IdMenu)'>Valider</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



